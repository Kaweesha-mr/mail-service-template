<mjml>
  <mj-body>
    <!-- Header Section -->
    <mj-section background-color="#f7f7f7">
      <mj-column>
        <mj-image src={{companyLogo}} alt="Company Logo" width="150px" />
      </mj-column>
    </mj-section>

    <!-- Main Content Section -->
    <mj-section background-color="#ffffff">
      <mj-column>
        <mj-text font-size="30px" color="#333333" font-family="Helvetica, Arial, sans-serif" align="center">
          Welcome, {{name}}!
        </mj-text>
        <mj-text font-size="16px" color="#777777" font-family="Helvetica, Arial, sans-serif" line-height="1.5" align="center">
          We're so excited to have you join our community. Our team is ready to help you get started and make your experience amazing.
        </mj-text>
        <mj-button background-color="#F45E43" color="#ffffff" font-family="Helvetica, Arial, sans-serif" font-size="16px" href="https://your-website.com/start" align="center">
          Get Started
        </mj-button>
      </mj-column>
    </mj-section>

    <!-- Footer Section -->
    <mj-section background-color="#333333">
      <mj-column>
        <mj-text font-size="12px" color="#ffffff" font-family="Helvetica, Arial, sans-serif" align="center">
          &copy; 2024 . All rights reserved.
        </mj-text>
        <mj-text font-size="12px" color="#ffffff" font-family="Helvetica, Arial, sans-serif" align="center">
          <a href="https://your-website.com/unsubscribe" style="color: #ffffff;">Unsubscribe</a>
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
